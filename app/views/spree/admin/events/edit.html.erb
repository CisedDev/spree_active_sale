<% content_for :page_title do %>
  <%= @active_sale.name %> > <%= @event.name %> > <%= t('spree.active_sale.event.title.edit') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t('spree.active_sale.event.link.back'), admin_active_sale_events_url(@active_sale), :icon => 'icon-arrow-left', :id => 'admin_active_sale_events_link' %>
    <%= button_link_to t('spree.active_sale.event.link.new'), new_admin_active_sale_event_url(@active_sale), :icon => 'icon-plus', :id => 'new_admin_active_sale_event_link' %>
    <%= button_link_to t('spree.active_sale.link.edit'), edit_admin_active_sale_url(@active_sale), :icon => 'icon-edit', :id => 'admin_active_sale_events_link' %>
  </li>
<% end %>

<div data-hook="admin_active_sale_event_edit_form">
  <div id="active-sale-event-form-wrapper">
    <%= render :partial => 'form' %>
  </div>
</div>
